@page
@model FlashCardsWebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Username"></label>
            </div>

            <div class="col-5">
                <input class="form-control" type="text" asp-for="Credential.Username" />
            </div>

            <span class="text-danger" asp-validation-for="Credential.Username"></span>
        </div>

        <div class="form-group row">

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Credential.Password"></label>
            </div>

            <div class="col-5">
                <input class="form-control" type="password" asp-for="@Model.Credential.Password" />
            </div>

            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>

        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="@ViewData["Title"]" />
        </div>
    </form>
</div>